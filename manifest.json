{
  "manifest_version": 2,
  "name": "Vroom",
  "description": "Automatically fast forwards youtube adverts",
  "version": "0.1.1",  
  "content_scripts": [{
    "matches": ["https://*.youtube.com/*"],
    "js": ["skipper.js"]
  }],          
  "background": {
   "scripts": ["background.js"]
  },
  "browser_action": {"default icon": "icon.png",
    "default_popup": "popup.html"},
  "permissions": ["activeTab", "tabs", "webRequest"]
}