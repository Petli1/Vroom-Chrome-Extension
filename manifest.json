{
  "manifest_version": 2,
  "name": "Vroom",
  "description": "Alt+V to fast forward videos",
  "version": "0.1.1",
  "commands": {
	  "_execute_browser_action": {
      "suggested_key": "Alt+V",
      "description": "Vroom"
    }
  },  
  "content_scripts": [{
    "matches": ["https://*.youtube.com/*"],
    "js": ["skipper.js"]
  }],          
  "background": {
   "scripts": ["background.js"]
  },
  "browser_action": {"default icon": "icon.png",
    "default_popup": "popup.html"},
  "permissions": ["activeTab", "tabs"]
}